<div class="container">
    <h2>Parking List</h2>
		<button class="btn btn-success" data-toggle="modal" data-target="#myModalAdd">Add New</button>

    <h3>Filter</h3>
    <form action="/" method="GET">
        <div class="col">
            <div class="form-group">
                <label for="formGroupExampleInput">type Transport</label>
                <select name="type_transport" id="" class="form-control" placeholder="Type Transport" required>
                    <option value="all">Semua</option>
                    <option value="mobil">Mobil</option>
                    <option value="motor">Motor</option>
                </select>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput">Date</label>
                    <div class="row">
                        <div class="col-md-6">
                          <input type="text" name="frist_date" readonly data-date-ignore-readonly="true" data-date-format="yyyy-MM-DD" class="form-control datepick" placeholder="First date">
                        </div>
                        <div class="col-md-6">
                          <input type="text" name="last_date" readonly data-date-ignore-readonly="true" data-date-format="yyyy-MM-DD" class="form-control datepick" placeholder="Last date">
                        </div>
                    </div>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput">price</label>
                    <div class="row">
                        <div class="col-md-6">
                          <input type="number" name="frist_price" class="form-control" placeholder="First price">
                        </div>
                        <div class="col-md-6">
                          <input type="number" name="last_price" class="form-control" placeholder="Last price">
                        </div>
                    </div>
            </div>
        </div>

        <button type="submit" class="btn btn-info">Proses</button>
    </form>
    <table class="table table-striped" id="mytable">
      <thead>
        <tr>
          <th>Parking ID</th>
          <th>Type Transport</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% todos.forEach(function(todo, i){ %>
        <tr>
          <td><%= i+1 %> </td>
          <td><%= todo.type_transport %></td>
          <td><%= new Date(todo.start_date).toISOString().slice(0, 19) %></td>
          <td><%= new Date(todo.end_date).toISOString().slice(0, 19) %></td>
          <td><%= todo.price %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  
	<!-- Add New Modal-->
<form action="/parking" method="post">
    <div class="modal fade" id="myModalAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add New Parking</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <div class="modal-body">
            <div class="form-group">
                <select name="type_transport" id="" class="form-control" placeholder="Type Transport" required>
                    <option value="mobil">Mobil</option>
                    <option value="motor">Motor</option>
                </select>
            </div>
            <div class="form-group required">
                <div class="input-group">
                <input readonly data-date-ignore-readonly="true" data-date-format="DD-MM-yyyy HH:mm:ss" type="text" class="form-control datepick" name="startdt" id="startdt" required placeholder="Jam Masuk">
                    <div class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                    </div>
                </div>
            </div>
            <div class="form-group required">
                <div class="input-group">
                <input readonly data-date-ignore-readonly="true" data-date-format="DD-MM-yyyy HH:mm:ss" type="text" class="form-control datepick" name="enddt" id="enddt" required placeholder="Jam Keluar">
                    <div class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                    </div>
                </div>
            </div>
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
        </div>
    </div>
    </form>